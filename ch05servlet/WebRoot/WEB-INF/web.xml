<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>adminName</param-name>
    <param-value>john</param-value>
  </context-param>
  <context-param>
    <param-name>adminPasswd</param-name>
    <param-value>123456</param-value>
  </context-param>
  <servlet>
    <servlet-name>MyServlet</servlet-name>
    <servlet-class>servlets.MyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminCheck</servlet-name>
    <servlet-class>servlets.AdminCheck</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ErrorPageServlet</servlet-name>
    <servlet-class>servlets.ErrorPageServlet</servlet-class>
  </servlet> 
   
  <servlet-mapping>
    <servlet-name>MyServlet</servlet-name>
    <url-pattern>/servlet/myservlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminCheck</servlet-name>
    <url-pattern>/servlet/admincheck</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ErrorPageServlet</servlet-name>
    <url-pattern>/servlet/errorpage</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>filters.EncodeFilter</filter-class>
  </filter>
  <filter>
    <filter-name>rightsFilter</filter-name>
    <filter-class>filters.RightsFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>rightsFilter</filter-name>
    <url-pattern>/system/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>listeners.DBManagerListener</listener-class>
  </listener>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>